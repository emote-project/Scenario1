                        <Condition Binding="{Binding RelativeSource={RelativeSource self}, Path=Name}" Value="GazeARB" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Content" Value="{DynamicResource GazeAOn}"/>
                </MultiDataTrigger>

                <MultiDataTrigger>

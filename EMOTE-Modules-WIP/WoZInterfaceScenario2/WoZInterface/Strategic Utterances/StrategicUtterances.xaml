    </UserControl.Resources>

    <Grid>
        <DockPanel Margin="195,10,154,386">

            <Button Template="{StaticResource SmallSkillClearButton}" Name="ClearSkill"  Click="ClearAllSkills"  Width="39" Margin="0,27,0,0" ></Button>
            <CheckBox Name="chkbox1" IsChecked="False" Click="RefreshUtteranceList" HorizontalAlignment="Center" Template="{StaticResource DistanceCheckBox}" Margin="0,27,0,0" />
            <CheckBox Name="chkbox2" IsChecked="False" Click="RefreshUtteranceList" Template="{StaticResource DirectionCheckBox}" Margin="0,27,0,0" />
            <CheckBox Name="chkbox3" IsChecked="False" Click="RefreshUtteranceList" Template="{StaticResource SymbolCheckBox}" Margin="0,27,0,0" />
            <Button Template="{StaticResource SmallSkillAllButton}" Name="FillSkill"  Click="SelectAllSkills"  Width="34" Margin="0,27,0,0" ></Button>
        </DockPanel>

        <Grid Margin="239,77,460,404">
            <TextBlock FontSize="10" Text="Distance" HorizontalAlignment="Center" Name="Distance" Foreground="White" MouseLeftButtonDown="RefreshUtteranceList"/>

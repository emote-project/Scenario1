            <Label  Content="Ruler" HorizontalAlignment="Left"  HorizontalContentAlignment="Center" Margin="189,10,0,0" Foreground="White" FontWeight="Bold" VerticalAlignment="Top" Width="75" Grid.RowSpan="2"/>
            <Label  Content="Compass" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="108,10,0,0" Foreground="White" FontWeight="Bold" VerticalAlignment="Top" Width="75" Grid.RowSpan="2"/>
            <Label  Content="Map Key" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="14,10,0,0" Foreground="White" FontWeight="Bold" VerticalAlignment="Top" Width="75" Grid.RowSpan="2"/>
            <Label  Content="Scrap Book" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="281,10,0,0" Foreground="White" FontWeight="Bold" VerticalAlignment="Top" Grid.RowSpan="2"/>
        </Grid>



    </Grid>


